<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:fontWeight="800"
            android:textColor="#1263ef"
            android:id="@+id/changeTitle"
            android:text="회원가입"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/idTitle"
            android:text="아이디"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/signupID"
            android:background="@drawable/border_style"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="기존 비밀번호"
            android:id="@+id/currentPwTitle"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/currentPw"
            android:background="@drawable/border_style"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            android:maxLines="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pwSwitchLayout"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="비밀번호 변경하기"
                android:layout_marginRight="7dp" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pwSwitch"
                android:checked="false"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/signupPWTitle"
            android:text="비밀번호"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/signupPW"
            android:background="@drawable/border_style"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="비밀번호 확인"
            android:id="@+id/signupPwCheckTitle"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/signupPwCheck"
            android:background="@drawable/border_style"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="이름"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/signUpName"
            android:background="@drawable/border_style"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="생년월일"
            android:layout_marginBottom="10dp"/>
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:id="@+id/signUpBirth"
            android:background="@drawable/border_style"
            android:calendarViewShown="false"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="키"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/signUpHeight"
            android:background="@drawable/border_style"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="몸무게"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/signUpWeight"
            android:background="@drawable/border_style"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:maxLines="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="성별 :  "/>
            <RadioGroup
                android:id="@+id/signupSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/signupMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성"
                    android:textSize="15sp"
                    android:layout_marginEnd="15dp"
                    />
                <RadioButton
                    android:id="@+id/signupWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:textSize="15sp"
                    android:layout_marginEnd="15dp"
                    />
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="이메일"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/signUpEmail"
            android:background="@drawable/border_style"
            android:textAlignment="center"
            android:hint="예시 : example@naver.com"
            android:layout_marginBottom="15dp"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="전화 번호"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/signUpPhone"
            android:background="@drawable/border_style"
            android:inputType="number"
            android:textAlignment="center"
            android:hint="예시 : 12312341234"
            android:layout_marginBottom="30dp"
            android:maxLines="1"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:background="#b5b5b5"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/blue_btn"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textColor="#ffffff"
            android:id="@+id/signupSubmit"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:text="회원가입"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/blue_btn"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textColor="#ffffff"
            android:id="@+id/goBackHome"
            android:textSize="20sp"
            android:text="돌아가기"
            android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:textColor="@android:color/white"
            android:background="@drawable/mypage_editbtn"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/changeSubmitBtn"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:text="회원가입"
            android:visibility="gone"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:textColor="@android:color/white"
            android:background="@drawable/mypage_editbtn"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/changeBackBtn"
            android:textSize="20sp"
            android:text="돌아가기"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>