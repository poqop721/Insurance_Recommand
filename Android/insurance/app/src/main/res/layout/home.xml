<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:backgroundTint="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="40sp"
        android:fontWeight="800"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="보험 추천"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/tab1Btn"
            android:textColor="#ffffff"
            android:background="@drawable/result_warning_btn"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="보험\n추천받기"
            android:padding="3dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/tab2Btn"
            android:textColor="#ffffff"
            android:background="@drawable/result_danger_btn"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:text="추천 받은\n보험"
            android:padding="3dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/tab3Btn"
        android:textColor="#ffffff"
        android:background="@drawable/all_ins_btn"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:padding="3dp"
        android:text="전체\n보험 상품"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/tab4Btn"
        android:textColor="#ffffff"
        android:background="@drawable/my_health_btn"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:text="나의\n건강정보"
        android:padding="3dp"
        />
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:id="@+id/tab5Btn"
        android:textColor="#ffffff"
        android:background="@drawable/mypage_editbtn"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="40dp"
        android:textSize="25sp"
        android:padding="3dp"
        android:text="마이페이지"
        />

</LinearLayout>